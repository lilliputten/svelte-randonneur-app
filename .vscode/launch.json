{
  // Use IntelliSense to learn about possible attributes.
  // Hover to view descriptions of existing attributes.
  // For more information, visit:
  // https://code.visualstudio.com/docs/editor/debugging#_launch-configurations
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Launch Chrome",
      "request": "launch",
      "type": "chrome",
      "url": "http://localhost:3000",
      "webRoot": "${workspaceFolder}"
    },
    {
      "name": "Attach to Chrome",
      "port": 9222,
      "request": "attach",
      "type": "chrome",
      "urlFilter": "http://localhost:3000/*", // use urlFilter instead of url!
      "webRoot": "${workspaceFolder}"
    },
    {
      "name": "node: custom script",
      "program": "${workspaceFolder}/test.js",
      "type": "node",
      "request": "launch",
      "runtimeExecutable": "node",
      // "externalConsole": true,
      "args": [
        // "--help",
      ]
    },
    {
      "name": "node: current file",
      "program": "${file}",
      "type": "node",
      "request": "launch",
      "runtimeExecutable": "node",
      "args": [
        // "--help",
        // "--tz=Europe/Moscow"
      ]
    },
    {
      "name": "raw jest",
      "program": "${workspaceRoot}/node_modules/jest/bin/jest.js",
      "args": [
        "--verbose",
        "MODULE"
      ],
      "type": "node",
      "request": "launch",
      "runtimeExecutable": "node",
      // "outputCapture" : "std",
      // "protocol": "inspector",
      "console": "integratedTerminal"
    },
    {
      "name": "craco test",
      "program": "${workspaceRoot}/node_modules/@craco/craco/dist/scripts/test.js",
      "args": [
        "--watchAll=false",
        "--verbose",
        "numbers.test"
      ],
      "type": "node",
      "request": "launch",
      "runtimeExecutable": "node",
      // "outputCapture" : "std",
      // "protocol": "inspector",
      "console": "integratedTerminal"
    },
    {
      "name": "Python: Run file",
      "type": "python",
      "request": "launch",
      "program": "${file}",
      "console": "integratedTerminal"
    },
    {
      "name": "Python: Run start-app.py",
      "type": "python",
      "request": "launch",
      "program": "start-app.py",
      "console": "integratedTerminal",
      "args": [
        "--dev",
        "--data-set-folder", "sweet-corn",
        "--omit-date-tag"
      ]
    }
  ]
}
